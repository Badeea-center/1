<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.custom</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="accounting_reports" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="fiscalyears" groups="account.group_account_manager">
                        <div class="o_setting_left_pane">
                            <field name="module_account_fiscalyears"/>
                        </div>

                        <div class="o_setting_right_pane">
                            <label for="module_account_fiscalyears"/>
                            <div class="text-muted" id="account_fiscalyears">
                                Manage all accounting operaions using fiscal years periods
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <xpath expr="//div[@data-key='account_invoicing']/t/div" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="chart_of_accounts" groups="account.group_account_manager">
                        <div class="o_setting_left_pane">
                            <field name="module_account_chart_of_accounts"/>
                        </div>

                        <div class="o_setting_right_pane">
                            <label for="module_account_chart_of_accounts"/>
                            <div class="text-muted" id="hierarchy_chart">
                                Add Hierarchy Chart Of Accounts
                            </div>
                        </div>

                        <div class="o_setting_left_pane">
                            <field name="anglo_saxon_accounting" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Use Anglo Saxon Accounting" for="anglo_saxon_accounting"/>
                        </div>

                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='analytic']/div" position="inside">
                <div class="o_setting_left_pane">
                    <field name="module_analytic_account"/>
                </div>

                <div class="o_setting_right_pane">
                    <label for="module_analytic_account"/>
                    <div class="text-muted" id="analytic_account">
                                Adding New Features to Analytic Accounts
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='recommended_apps']" position="after">
                <h2>Journals</h2>
                <div class="row mt16">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="expense_journal_id" class="col-md-3 o_light_label"/>
                                    <field name="expense_journal_id" options="{'no_create_edit': True, 'no_open': True}" domain="[('type','=','purchase')]"/>
                                </div>
                                <div class="row mt16">
                                    <label for="custody_journal_id" class="col-md-3 o_light_label"/>
                                    <field name="custody_journal_id" options="{'no_create_edit': True, 'no_open': True}" domain="[('type','=','purchase')]"/>
                                </div>
                                <div class="row mt16">
                                    <label for="income_journal_id" class="col-md-3 o_light_label"/>
                                    <field name="income_journal_id" options="{'no_create_edit': True, 'no_open': True}" domain="[('type','=','sale')]"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

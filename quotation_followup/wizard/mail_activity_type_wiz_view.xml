<?xml version="1.0"?>
<odoo>

    <record id="mail_activity_view_form_popup" model="ir.ui.view">
        <field name="name">mail.activity.form.inherit.calendar</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="un_remove_able" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='summary']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='activity_type_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_close_dialog']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_done']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@special='cancel']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@special='cancel']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('activity_category', '=', 'meeting'),('un_remove_able', '=', True)]}</attribute>
            </xpath>


            <xpath expr="//button[@name='action_close_dialog']" position="before">
                <button string="Keep Snoozing"
                        attrs="{'invisible': [('un_remove_able', '!=', True)]}"
                        name="close_and_create_new"
                        type="object"
                        class="btn-primary"/>


            </xpath>
        </field>
    </record>

</odoo>

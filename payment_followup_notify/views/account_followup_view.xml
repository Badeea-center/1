<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_followup_followup_line_form" model="ir.ui.view">
            <field name="name">account_followup.followup.line.form</field>
            <field name="model">account_followup.followup.line</field>
            <field name="inherit_id" ref="ce_accounting_followup.view_account_followup_followup_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[2]" position="after">
                    <div>
                        <field name="send_popup" class="oe_inline"/>
                        <label for="send_popup"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_account_followup_followup_line_tree" model="ir.ui.view">
            <field name="name">account_followup.followup.line.form</field>
            <field name="model">account_followup.followup.line</field>
            <field name="inherit_id" ref="ce_accounting_followup.view_account_followup_followup_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='send_email']" position="after">
                    <field name="send_popup"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_requisition_form" model="ir.ui.view">
            <field name="name">account.payment.requisition.form</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                    <sheet>
                        <group>
                            <field name="payment_type" invisible="1"/>
                            <field name="partner_type" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="custody_id" invisible="1"/>
                            
                            <field name="state" invisible="1"/>
                            <group>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount" readonly="1"/>
                                    <field name="currency_id" readonly="1" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                                </div>
                                <field name="journal_id" attrs="{'invisible': [('amount', '=', 0)]}"/>
                                <field name="hide_payment_method" invisible="1"/>
                                <field name="payment_method_id" widget="radio" attrs="{'invisible': ['|', ('hide_payment_method', '=', True), ('amount', '=', 0.0)]}"/>
                                <field name="payment_method_code" invisible="1"/>
                            </group>
                            <group>
                                <field name="payment_date"/>
                                <field name="communication"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Create' name="action_custody_payment" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_requisition_payment" model="ir.actions.act_window">
            <field name="name">Register Payment</field>
            <field name="res_model">account.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_payment_requisition_form"/>
            <field name="context">{'requisition_request_ids': [(4, active_id, None)]}</field>
            <field name="target">new</field>
        </record>



    </data>
</odoo>

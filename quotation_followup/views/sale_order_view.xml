<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_followup_type_from_view" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sale_followup_type"/>
                    <field name="mark_followed" invisible="1"/>
                    <field name="ending_date" attrs="{'invisible': [('sale_followup_type', '!=', 'undirected_tender')], 'required': [('sale_followup_type', '=', 'undirected_tender')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
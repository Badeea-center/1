<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_line_from_view" model="ir.ui.view">
        <field name="name">purchase.order.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">

                <!-- <field name="order_dated"/> -->
                <field name="ref_no"/>
                <field name="shipping_to"/>
                <field name="legalization"/>
            </xpath>


            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="widget">date</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                <field name="line_no" string="No."/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="after">
                <field name="line_no" string="No."/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//notebook/page[1]" position="before">
                <page string="Description">
                    <field name="name" string="No."/>
                </page>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_header_layout_emp_info">
        <div class="header">
            <div class="row">
                <div class="col-xs-3 mb4">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                         style="max-height: 45px;"/>
                </div>
                <div class="col-xs-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div style="text-align:left" name="company_address">
                    <span t-field="company.partner_id"
                          t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                          style="border-bottom: 1px solid black; display:inline-block;"/>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-raw="0"/>
            </div>
        </div>
    </template>

    <template id="custom_external_layout_emp_info">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>

        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="article">
            <t t-call="hr_base.custom_header_layout_emp_info"/>
            <t t-raw="0"/>
        </div>

    </template>

    <template id="employee_info_report_template">
        <t t-call="hr_base.custom_external_layout_emp_info">

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record model="ir.ui.view" id="update_lot_calibration_form">
            <field name="name">update.lot.calibration.from</field>
            <field name="model">update.lot.calibration</field>
            <field name="arch" type="xml">
                <form string="Update Calibration">
                    <group>
                        <group>
                            <field name="lot_id" readonly="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="technician_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="feedback"/>
                    </group>
                    <footer>
                        <button name="confirm_calibration"
                                string="Create Calibration"
                                type="object"
                                class="oe_highlight"/>
                        or
                        <button special="cancel"
                                string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>